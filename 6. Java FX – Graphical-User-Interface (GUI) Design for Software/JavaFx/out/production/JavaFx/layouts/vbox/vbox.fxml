<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:controller="layouts.vbox.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_RIGHT" spacing="5"
        style="-fx-border-color: blue; -fx-border-width: 5">

    <padding>
        <Insets bottom="20" right="20"/>
    </padding>

    <Label text="Welcome to Java Fx!!" textFill="royalblue">
        <font>
            <Font name="Time New Roman bold" size="70"/>
        </font>
    </Label>

    <Label text="Do you wish to continue?" textFill="green">
        <font>
            <Font name="Time New Roman bold" size="40"/>
        </font>
    </Label>

    <HBox alignment="BOTTOM_CENTER" spacing="30" prefHeight="150">
        <Button text="Okay" prefWidth="100"/>
        <Button text="Cancel" prefWidth="100"/>
        <Button text="Help" prefWidth="100"/>
    </HBox>


<!--    <Button text="Okay" prefWidth="100"/>-->
<!--    <Button text="Cancel" prefWidth="100"/>-->
<!--    <Button text="Help" prefWidth="100"/>-->

</VBox>






















