<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.TextField?>
<TilePane fx:controller="basicevent.Controller"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10"
        stylesheets="@Style.css">

    <padding>
        <Insets top="20" left="20"/>
    </padding>

    <Label fx:id="allItems" prefWidth="200">

    </Label>

    <TextField fx:id="itemName" prefWidth="100" onKeyReleased="#keyReleased"/>

    <Button fx:id="btn1" text="Add Item" onAction="#onAddButtonClicked"/>


</TilePane>




























